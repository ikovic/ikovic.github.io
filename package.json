{
  "name": "ikovic.github.io",
  "version": "1.0.0",
  "description": "Personal website",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint ./pages -f table",
    "export": "next export",
    "deploy": "rm -rf node_modules/.cache && next build && next export && touch out/.nojekyll && git add out/ && git commit -m \"Deploy Next.js to gh-pages\" && git subtree push --prefix out origin gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikovic/ikovic.github.io.git"
  },
  "author": "Ivan Kovic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ikovic/ikovic.github.io/issues"
  },
  "homepage": "https://github.com/ikovic/ikovic.github.io#readme",
  "devDependencies": {
    "@zeit/next-css": "^1.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.9.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1"
  },
  "dependencies": {
    "bulma": "^0.7.2",
    "next": "^7.0.2",
    "react": "^16.6.1",
    "react-dom": "^16.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint",
      "git add"
    ],
    "*.{json,scss,sass,css,less}": [
      "prettier --write",
      "git add"
    ]
  }
}
